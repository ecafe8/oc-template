{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": false,
  "extends": [
    "@repo/biome-config/base",
    "@repo/biome-config/next",
    "@repo/biome-config/react-internal"
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noStaticElementInteractions": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noUnknownAtRules": {
          "options": {
            "ignore": [
              "source",
              "custom-variant"
            ]
          },
          "level": "error"
        }
      }
    }
  }
}